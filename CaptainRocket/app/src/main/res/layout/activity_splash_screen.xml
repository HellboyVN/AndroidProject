<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/splash"
    tools:context="com.example.sev_user.captainrocket.Ui.SplashScreen">




    <TextView
        android:id="@+id/tvCaptionRocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="CAPTAIN ROCKET"
        android:textColor="@android:color/holo_red_light"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKeychop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCaptionRocket"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Ketchapp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/tvCloneby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKeychop"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:text="Clone by: TDTH Team"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />
    <ImageView
        android:id="@+id/may"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rocket_splash2" />
    <TextView
        android:layout_above="@id/may"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Power by \n SAMSUNG ELECTRONIC VIETNAM - SVMC"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="9dp"
        android:textStyle="bold"
        android:typeface="monospace" />
    <ImageView
        android:layout_above="@id/text"
        android:id="@+id/samsung"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/samsung" />




</RelativeLayout>


