<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".Ui.MainActivity">


    <TextView
        android:id="@+id/tvChooseAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="3dp"
        android:text="Choose Avatar"
        android:textColor="@color/den"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/groupCaption1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChooseAvatar"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/groupCap_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgCap1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/pikalong_right" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Pika Long"
                android:textColor="@color/den"
                android:textSize="17sp"
                android:textStyle="italic"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupCaption_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgCap2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/flappy1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Stupid Bird"
                android:textColor="@color/den"
                android:textSize="17sp"
                android:textStyle="italic"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/groupCaption3_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupCaption1_2"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/groupCaption_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgCap3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/captain3_front" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Duck Pool"
                android:textColor="@color/den"
                android:textSize="17sp"
                android:textStyle="italic"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupCaption_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupCaption_3"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgCap4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/captain4_front" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tiny Hulk"
                android:textColor="@color/den"
                android:textSize="17sp"
                android:textStyle="italic"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rocket_splash2" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
