<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/home_background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/native_ad_admob_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:visibility="gone" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/native_ad_admob_1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5.0dip"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="4.0dip"
                card_view:cardElevation="3.0dip">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gif_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4.0dip"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/primary"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/title_dividr"
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_marginTop="4.0dip"
                            android:background="@color/primary"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/image_gif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_marginTop="4.0dip"
                            android:background="@color/primary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/messenger_button_send"
                                layout="@layout/messenger_button_send_blue_round"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:layout_margin="3.0dip" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/facebook_float"
                                style="@style/FacebookFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:fab_iconSrc="@drawable/com_facebook_button_icon"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/whatsapp_float"
                                style="@style/WhatsAppFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:fab_iconSrc="@drawable/whatsapp"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/snapchat_float"
                                style="@style/SnapchatFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:fab_iconSrc="@drawable/snapchat"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/download_float"
                                style="@style/DownloadFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:fab_iconSrc="@drawable/download_float"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/share_float"
                                style="@style/ShareFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:fab_iconSrc="@drawable/share_float"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />

                            <com.rey.material.widget.FloatingActionButton
                                android:id="@+id/refresh_float"
                                style="@style/RefreshFloatingColorActionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                card_view:fab_iconSrc="@drawable/refresh_float"
                                card_view:fab_radius="22.0dip"
                                card_view:rd_enable="true" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tags_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5.0dip"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="4.0dip"
                card_view:cardElevation="3.0dip">

                <TextView
                    android:id="@+id/tags_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/powered_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tags_card_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5.0dip"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="4.0dip"
                card_view:cardElevation="3.0dip">

                <ImageView
                    android:id="@+id/powered_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:contentDescription="@string/app_name" />
            </android.support.v7.widget.CardView>

            <com.rey.material.widget.ProgressView
                android:id="@+id/share_progress_view"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_below="@+id/powered_card_view"
                android:layout_centerHorizontal="true"
                app:pv_autostart="true"
                app:pv_circular="true"
                app:pv_progressMode="indeterminate"
                app:pv_progressStyle="@style/ColorsCircularProgressDrawableStyle" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>