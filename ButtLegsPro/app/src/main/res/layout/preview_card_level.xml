<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/mCardItemLayout"
    n1:layout_width="match_parent"
    n1:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/mCardLayout"
        n1:layout_width="match_parent"
        n1:layout_height="100.0dip"
        n1:layout_gravity="center"
        n1:layout_margin="@dimen/card_margin"
        n2:cardBackgroundColor="#ffffffff"
        n2:cardCornerRadius="@dimen/card_album_radius"
        n2:elevation="3.0dip">

        <LinearLayout
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:layout_gravity="center"
            n1:orientation="horizontal">

            <LinearLayout
                n1:layout_width="0.0dip"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center_vertical"
                n1:layout_weight="1.0"
                n1:gravity="center"
                n1:orientation="vertical">

                <LinearLayout
                    n1:layout_width="match_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center_vertical"
                    n1:gravity="center"
                    n1:orientation="vertical"
                    n1:padding="5.0dip">

                    <TextView
                        n1:id="@+id/pCardName"
                        n1:layout_width="match_parent"
                        n1:layout_height="match_parent"
                        n1:ellipsize="end"
                        n1:gravity="left"
                        n1:maxLines="2"
                        n1:padding="2.0dip"
                        n1:text="Plank Name"
                        n1:textColor="@color/album_title"
                        n1:textSize="20.0dip" />

                    <LinearLayout
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="left"
                        n1:orientation="horizontal"
                        n1:padding="2.0dip">

                        <android.support.v7.widget.AppCompatImageView
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n2:srcCompat="@drawable/ic_timer" />

                        <TextView
                            n1:id="@+id/pCardDesc"
                            n1:layout_width="match_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:layout_marginLeft="5.0dip"
                            n1:text="5 min (x2)"
                            n1:textSize="16.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                n1:id="@+id/mCardImage"
                n1:layout_width="0.0dip"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center"
                n1:layout_weight="1.0"
                n1:clickable="true"
                n1:scaleType="centerInside" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>