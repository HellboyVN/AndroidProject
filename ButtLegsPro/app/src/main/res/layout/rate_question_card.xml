<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="match_parent"
    n1:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/rateCardLayout"
        n1:layout_width="match_parent"
        n1:layout_height="wrap_content"
        n1:layout_gravity="center"
        n1:layout_margin="5.0dip"
        n1:padding="20.0dip"
        n2:cardBackgroundColor="@color/white"
        n2:cardCornerRadius="0.0dip">

        <LinearLayout
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:layout_gravity="center"
            n1:background="#ffffffff"
            n1:gravity="center"
            n1:orientation="vertical">

            <TextView
                n1:id="@+id/rateQuestion"
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center"
                n1:layout_margin="5.0dip"
                n1:gravity="center"
                n1:padding="10.0dip"
                n1:textColor="@color/colorPrimary"
                n1:textSize="20.0dip" />

            <LinearLayout
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center"
                n1:layout_marginTop="15.0dip"
                n1:background="#ffffffff"
                n1:gravity="center"
                n1:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    n1:id="@+id/rateNegative"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_margin="5.0dip"
                    n1:layout_weight="1.0"
                    n1:background="@drawable/ripple_transparent"
                    n1:button="@null"
                    n1:gravity="center"
                    n1:padding="15.0dip"
                    n1:text="@string/rate1_negativ"
                    n1:textAllCaps="false"
                    n1:textColor="@color/colorPrimary" />

                <android.support.v7.widget.AppCompatTextView
                    n1:id="@+id/ratePositive"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_margin="5.0dip"
                    n1:layout_weight="1.0"
                    n1:background="@drawable/ripple_color_primary"
                    n1:gravity="center"
                    n1:padding="15.0dip"
                    n1:text="@string/rate1_positiv"
                    n1:textAllCaps="true"
                    n1:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>