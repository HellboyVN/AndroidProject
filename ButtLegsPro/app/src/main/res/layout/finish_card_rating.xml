<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="match_parent"
    n1:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/rateCardView"
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:layout_gravity="center"
        n1:layout_margin="@dimen/card_margin"
        n2:cardBackgroundColor="#ffffffff"
        n2:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:orientation="vertical">

            <LinearLayout
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="5.0dip"
                n1:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    n1:id="@+id/rateTitle"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center_horizontal"
                    n1:layout_margin="2.0dip"
                    n1:gravity="center_horizontal"
                    n1:padding="5.0dip"
                    n1:text="@string/give_5_title"
                    n1:textAllCaps="false"
                    n1:textColor="#ff434343"
                    n1:textSize="18.0dip" />

                <RatingBar
                    n1:id="@+id/rateBar"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_marginTop="5.0dip"
                    n1:isIndicator="true"
                    n1:rating="5.0"
                    n1:theme="@style/RatingBar" />
            </LinearLayout>

            <LinearLayout
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center"
                n1:gravity="center"
                n1:orientation="horizontal"
                n1:padding="5.0dip"
                n1:visibility="visible">

                <android.support.v7.widget.AppCompatTextView
                    n1:id="@+id/rateOk"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:padding="5.0dip"
                    n1:text="@string/give_5"
                    n1:textAllCaps="true"
                    n1:textColor="@color/colorPrimary"
                    n1:textSize="20.0dip" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>