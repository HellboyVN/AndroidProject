<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:n1="http://schemas.android.com/apk/res/android"
    xmlns:n2="http://schemas.android.com/apk/res-auto"
    n1:id="@+id/card2"
    n1:layout_width="match_parent"
    n1:layout_height="200.0dip"
    n1:layout_below="@+id/card2"
    n1:layout_margin="@dimen/card_view_padding"
    n2:cardBackgroundColor="@color/album_title"
    n2:cardCornerRadius="@dimen/card_view_roundcorner">

    <RelativeLayout
        n1:layout_width="match_parent"
        n1:layout_height="match_parent">

        <include
            n1:id="@+id/chart_toolbar"
            layout="@layout/card_toolbar" />

        <TextView
            n1:id="@+id/chart2_legend"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/chart_toolbar"
            n1:layout_marginLeft="40.0dip"
            n1:layout_marginTop="5.0dip"
            n1:gravity="bottom"
            n1:text="@string/chart_label"
            n1:textColor="#ffffff"
            n1:textSize="12.0sp" />

        <TextView
            n1:id="@+id/chart2_time"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/chart2_legend"
            n1:layout_marginLeft="30.0dip"
            n1:includeFontPadding="false"
            n1:text="@string/chart_label3"
            n1:textColor="#ffffffff"
            n1:textSize="30.0sp" />

        <com.db.chart.view.LineChartView
            n1:id="@+id/chart2"
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:layout_below="@+id/chart2_time"
            n1:layout_marginBottom="35.0dip"
            n1:layout_marginLeft="15.0dip"
            n1:layout_marginRight="15.0dip"
            n1:layout_marginTop="-15.0dip" />
    </RelativeLayout>
</android.support.v7.widget.CardView>