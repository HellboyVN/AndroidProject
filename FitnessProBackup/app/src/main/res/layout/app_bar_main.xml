<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/root"
    n1:layout_width="match_parent"
    n1:layout_height="match_parent">

    <FrameLayout
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:paddingTop="@dimen/tab_height">

        <android.support.v4.view.ViewPager
            n1:id="@+id/pager"
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:background="#fff2f2f2" />
    </FrameLayout>

    <LinearLayout
        n1:id="@+id/header"
        n1:layout_width="match_parent"
        n1:layout_height="wrap_content"
        n1:background="?colorPrimary"
        n1:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:n2="http://schemas.android.com/apk/res-auto"
            n1:id="@+id/mainToolbar"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:background="@color/colorPrimary"
            n1:minHeight="?actionBarSize"
            n2:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            n2:theme="@style/ToolbarTheme">

            <RelativeLayout
                n1:layout_width="match_parent"
                n1:layout_height="match_parent"
                n1:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    n1:id="@+id/mainToolbarText"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:text="@string/app_name"
                    n1:textColor="#ffffffff"
                    n1:textSize="20.0sp" />

                <android.support.v7.widget.AppCompatImageView
                    n1:id="@+id/menu"
                    n1:layout_width="25.0dip"
                    n1:layout_height="25.0dip"
                    n1:layout_alignParentRight="true"
                    n1:layout_alignParentTop="true"
                    n1:layout_gravity="bottom"
                    n1:layout_marginRight="10.0dip"
                    n2:srcCompat="@drawable/ic_more_vert_white" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <hb.fitnesschallenge.homeworkout.homeworkouts.noequipment.fitnesspro.home.tabhelper.SlidingTabLayout
            n1:id="@+id/sliding_tabs"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:background="@color/colorPrimary" />
    </LinearLayout>
</FrameLayout>