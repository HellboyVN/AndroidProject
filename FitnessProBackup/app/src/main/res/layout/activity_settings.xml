<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="match_parent"
    n1:layout_height="match_parent"
    n1:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        n1:layout_width="match_parent"
        n1:layout_height="wrap_content"
        n1:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar xmlns:n2="http://schemas.android.com/apk/res-auto"
            n1:id="@+id/toolbar"
            n1:layout_width="match_parent"
            n1:layout_height="?actionBarSize"
            n1:background="?colorPrimary"
            n2:popupTheme="@style/AppTheme.PopupOverlay"
            n2:theme="@style/ToolbarTheme">

            <android.support.v7.widget.AppCompatTextView
                n1:id="@+id/settingToolbarText"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:text="@string/settings"
                n1:textAllCaps="false"
                n1:textColor="@android:color/white"
                n1:textSize="20.0sp" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_setting" />
</android.support.design.widget.CoordinatorLayout>