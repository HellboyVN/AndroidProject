<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aerotools.photo.sketch.maker.editor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.photo.sketch.photo.SelectActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/PickerTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.photo.sketch.gallery.HomeFragmentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.photo.sketch.gallery.BucketHomeFragmentActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.textgram.ImageFragmentientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pencil.sketch.photo.ImageRemake"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.pencil.sketch.photo.PhotoShare_Activity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>