<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <com.gelitenight.waveview.library.WaveView
        android:id="@+id/wave1"
        android:layout_width="280dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#9E9E9E" />

    <ImageView
        android:id="@+id/img_dota"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_dota" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageviewlaunch"
        android:layout_width="280dp"
        android:layout_height="175dp"
        android:src="@drawable/wifi_loog"
        android:layout_alignTop="@+id/wave1"
        android:layout_alignLeft="@+id/wave1"
        android:layout_alignStart="@+id/wave1"
        android:layout_marginTop="148dp" />
</RelativeLayout>