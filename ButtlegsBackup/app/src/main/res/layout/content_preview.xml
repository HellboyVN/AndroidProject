<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    xmlns:n2="http://schemas.android.com/apk/res-auto"
    n1:layout_width="match_parent"
    n1:layout_height="match_parent"
    n2:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        n1:id="@+id/restPreviewLayout"
        n1:layout_width="match_parent"
        n1:layout_height="wrap_content"
        n1:layout_gravity="center"
        n1:layout_marginBottom="100.0dip"
        n1:gravity="center"
        n1:orientation="vertical"
        n1:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            n1:id="@+id/previewRestDay"
            n1:layout_width="200.0dip"
            n1:layout_height="200.0dip"
            n1:layout_gravity="center"
            n1:gravity="center"
            n2:srcCompat="@drawable/ic_rest" />

        <TextView
            n1:id="@+id/previewRestDayText"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:gravity="center"
            n1:text="@string/rest_text"
            n1:textColor="@color/colorPrimary"
            n1:textSize="20.0dip" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        n1:id="@+id/previewRV"
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:layout_marginBottom="100dip"
        n1:clipToPadding="false"
        n1:padding="5.0dip" />

    <FrameLayout
        n1:id="@+id/drag_drop"
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:layout_gravity="center"
        n1:background="#80000000"
        n1:visibility="gone">

        <LinearLayout
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:gravity="center"
            n1:orientation="vertical">

            <TextView
                n1:id="@+id/drag_drop_text"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center_horizontal"
                n1:gravity="center"
                n1:padding="30.0dip"
                n1:text="@string/drag_drop_text"
                n1:textColor="@color/white"
                n1:textSize="25.0dip" />

            <android.support.v7.widget.AppCompatImageView
                n1:layout_width="150.0dip"
                n1:layout_height="150.0dip"
                n1:layout_gravity="center_horizontal"
                n2:srcCompat="@drawable/ic_drag_drop_icon" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>